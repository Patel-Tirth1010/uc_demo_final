<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register"
    android:background="@color/three"
    >

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit Profile"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="@color/four"
        android:textSize="30dp"
        app:fontFamily="sans-serif-light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarFadeDuration="@integer/material_motion_duration_short_2"
        android:scrollbarSize="5dp"
        android:scrollbarStyle="outsideOverlay"
        android:background="@color/one">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginStart="35dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableEnd="@drawable/ic_baseline_sort_by_alpha_24"
                    android:fontFamily="sans-serif-light"
                    android:hint="First name"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--    Last Name   -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginStart="35dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableEnd="@drawable/ic_baseline_sort_by_alpha_24"
                    android:fontFamily="sans-serif-light"
                    android:hint="Last Name"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="185dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--    Email    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:layout_marginStart="35dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableEnd="@drawable/ic_baseline_alternate_email_24"
                    android:fontFamily="sans-serif-light"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="-45dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <!--    ph_no -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginStart="35dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableEnd="@drawable/ic_baseline_phone_24"
                    android:fontFamily="sans-serif-light"
                    android:hint="Phone "
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="-45dp"
                    tools:layout_editor_absoluteY="dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginStart="35dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableEnd="@drawable/ic_baseline_home_24"
                    android:fontFamily="sans-serif-light"
                    android:hint="Address"
                    android:inputType="textMultiLine"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="-45dp"
                    tools:layout_editor_absoluteY="dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    State -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_marginStart="35dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableEnd="@drawable/ic_baseline_home_24"
                    android:fontFamily="sans-serif-light"
                    android:hint="State"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="-45dp"
                    tools:layout_editor_absoluteY="dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--   City  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginStart="35dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableRight="@drawable/ic_baseline_location_city_24"
                    android:fontFamily="sans-serif-light"
                    android:hint="City"
                    android:inputType="textMultiLine"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="-45dp"
                    tools:layout_editor_absoluteY="dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--   pincode  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode"
                android:layout_marginStart="35dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout8"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="22dp"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="@color/four">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/three"
                    android:drawableEnd="@drawable/ic_baseline_pin_drop_24"
                    android:fontFamily="sans-serif-light"
                    android:hint="Pincode"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="-45dp"
                    tools:layout_editor_absoluteY="dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/cancelchange"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/three"
                android:fontFamily="sans-serif-light"
                android:text="Cancel"
                android:layout_marginStart="35dp"
                android:textColor="@color/four"
                android:textSize="20dp"
                app:strokeColor="@color/four"
                app:strokeWidth="2dp"

                />

            <!--Update Button -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/updateprof"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/three"
                android:fontFamily="sans-serif-light"
                android:text="Update"
                android:textColor="@color/four"
                android:textSize="20dp"
                app:strokeColor="@color/four"
                app:strokeWidth="2dp"
                />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>